<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners android:radius="16dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="1.5dp"
                android:top="4dp" />
        </shape>
    </item>
    <!-- Inner fill for unchecked state -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <selector>
            <item android:state_checked="true">
                <shape android:shape="rectangle">

                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
